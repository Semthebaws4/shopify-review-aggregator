# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_SCOPES=read_products,write_products,read_orders,write_orders
SHOPIFY_APP_URL=https://your-app-domain.com
SHOPIFY_REDIRECT_URI=https://your-app-domain.com/auth/callback

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Database Configuration (SQLite for development)
DATABASE_PATH=./data/app.db

# Bol.com API Configuration (you'll need to register for API access)
BOL_API_KEY=your_bol_api_key_here
BOL_API_SECRET=your_bol_api_secret_here

# App Configuration
NODE_ENV=development
PORT=3000

# Webhook URLs (for production)
WEBHOOK_URL=https://your-app-domain.com/webhooks 